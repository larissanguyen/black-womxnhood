<%= form_for @resource do |f| %>

<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :date_published %>
<%= f.select_year Date.current, start_year: 1900, end_year: Date.current.year :date_published %>

<%= f.label :author %>
<%= f.collection_select :author_id, @author, :id, :name %>

<%= f.label :topics %>
<%= f.check_boxes :topic_id, @topic, :id, :name %>

<%= f.submit %>

<% end %>