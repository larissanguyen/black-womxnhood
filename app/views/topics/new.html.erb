<% if flash[:errors]%>
	<ul>
        <% flash[:errors].each do |error| %>
            <li style="color: red"> <%= error %> </li>
        <% end %>
    </ul>
<% end %>


<h1>New Topic:</h1>

<%= form_with model: Topic.new do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>
<br>

<%= f.label :description %>
<%= f.text_field :description %>
<br>

<%= f.submit %>

<% end %>