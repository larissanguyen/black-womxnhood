<%= link_to "Explore Resources", resources_path %>
<%= link_to "My Account", user_path(@user) %>

<div><h1>All Topics</h1></div>

<div>
    <% @topics.each do |topic| %>
		<h3>
			<%= link_to topic.name, "/topics/#{topic.id}" %> 
		</h3>
		
		<ul>
			<% topic.resources.each do |resource| %>
			<li> <%= link_to resource.title, "/resources/#{resource.id}" %> by 
				 <%= resource.author.name %>
			</li>
			<% end %>
		</ul>
	<% end %>
</div>
