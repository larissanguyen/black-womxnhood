<%= link_to "Explore Resources", resources_path %>
<%= link_to "My Account", user_path(@user) %>

<% if flash[:errors] %>
    <ul>
        <% flash[:errors].each do |error| %>
            <li style="color: red"> <%= error %> </li>
        <% end %>
    </ul>
<% end %> 

<h1>New Author</h1>

<%= form_for @author do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :bio %>
<%= f.text_field :bio %>

<%= f.submit %>

<% end %>